<div class="col-md-offset-7 col-md-2 col-lg-offset-7 col-lg-2" style="padding-top: 100px;" >

	<span class="fa fa-lock fa-4x"></span>	

	<form class="form-signin" action="{{app_context}}/login_action" method="post" role="form" data-toggle="validator">
		<input type="hidden" name="frm_referring_url" value="{{referring_url}}">
		
		<div class="form-group">
			<input type="email" name="email" class="form-control" placeholder="{{__ "email address"}}" value="" required autofocus>
		</div>
		
		<div class="form-group">
			<input type="password" name="password" class="form-control" placeholder="{{__ "Password"}}" value="" required>
		</div>
		
		<button class="btn btn-lg btn-primary btn-block" type="submit">{{__ "Sign in"}}</button>
	</form>
</div>